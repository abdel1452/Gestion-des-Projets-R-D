<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>{% block title %}Mon Application{% endblock %}</title>
    <link rel="icon" type="image/jpeg" href="{{ asset('images/amsom.jpg') }}" />

    {# Bootstrap CSS #}
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />

    {{ encore_entry_link_tags('app') }}

    <style>
        /* Lightbox style */
        #lightbox {
            position: fixed;
            top: 0; left: 0; right: 0; bottom: 0;
            background: rgba(0,0,0,0.8);
            display: none;
            justify-content: center;
            align-items: center;
            z-index: 1050;
            cursor: zoom-out;
        }
        #lightbox img {
            max-width: 90%;
            max-height: 90%;
            border-radius: 8px;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
        }
        /* Profile container */
        .profile-container {
            position: absolute;
            top: 10px;
            right: 20px;
            display: flex;
            align-items: center;
            gap: 15px;
            z-index: 1000;
        }
        .profile-img {
            width: 70px;
            height: 70px;
            object-fit: cover;
            border-radius: 50%;
            border: 2px solid #ccc;
            cursor: pointer;
        }
        /* Project image with object-fit: cover */
        .project-image {
            width: 100%;
            height: 80px;
            object-fit: cover;
            border-radius: 5px;
        }
    </style>
</head>
<body>

<header class="position-relative mb-4" style="min-height: 100px;">
    <img src="{{ asset('images/amsom.jpg') }}" alt="Logo" style="position: absolute; left: 20px; top: 10px; height: 80px;">
    <h1 class="text-center pt-4">{% block header_title %}Liste des ports{% endblock %}</h1>

   {% if app.request.get('_route') != 'project_public' and app.user %}
    <div class="profile-container d-flex align-items-center">
        <img id="profileImg" src="{{ asset('images/man.png') }}" alt="Profil" class="profile-img me-2" />
        <span>{{ app.user.username }}</span>

        <div class="dropdown ms-3">
            <button class="btn btn-outline-secondary dropdown-toggle" type="button" id="ellipsisBtn" data-bs-toggle="dropdown" aria-expanded="false">‚ãØ</button>
            <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="ellipsisBtn">
                <li><a class="dropdown-item" href="{{ path('admin_create') }}">Ajouter un administrateur</a></li>
                <li><a class="dropdown-item" href="{{ path('project_new') }}">‚ûï Ajouter un projet</a></li>
                <li><a class="dropdown-item" href="{{ path('project_index') }}">üìÑ Voir projets</a></li>
                <li><button class="dropdown-item" id="addPhotoBtn">üñºÔ∏è Modifier la photo de profil</button></li>
                <li><button class="dropdown-item d-none" id="removePhotoBtn">‚ùå Supprimer la photo</button></li>
                <li><hr class="dropdown-divider"></li>
                <li>
                    <form action="{{ path('admin_logout') }}" method="post">
                        <button type="submit" class="btn btn-link">Se d√©connecter</button>
                    </form>
                </li>
            </ul>
        </div>
    </div>
{% endif %}
</header>


<main class="container">
    {% block body %}{% endblock %}
</main>

<footer>
    <div class="color-bar">
        <div class="color1"></div>
        <div class="color2"></div>
        <div class="color3"></div>
    </div>
</footer>

{# Lightbox HTML #}
<div id="lightbox">
    <img src="" alt="Image agrandie" id="lightboxImg" />
</div>

{# Bootstrap JS #}
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
{{ encore_entry_script_tags('app') }}

<input type="file" id="profileUpload" accept="image/*" style="display: none;" />

<script>
document.addEventListener('DOMContentLoaded', () => {
    const addBtn = document.getElementById('addPhotoBtn');
    const remBtn = document.getElementById('removePhotoBtn');
    const img = document.getElementById('profileImg');
    const input = document.getElementById('profileUpload');
    const lightbox = document.getElementById('lightbox');
    const lightboxImg = document.getElementById('lightboxImg');
    let isDefault = true;

    addBtn?.addEventListener('click', () => input.click());

    remBtn?.addEventListener('click', () => {
        img.src = "{{ asset('images/man.png') }}";
        isDefault = true;
        remBtn.classList.add('d-none');
        addBtn.innerText = 'Ajouter une photo';
    });

    input?.addEventListener('change', (e) => {
        const file = e.target.files[0];
        if (!file) return;

        const reader = new FileReader();
        reader.onload = function(ev) {
            img.src = ev.target.result;
            isDefault = false;
            remBtn.classList.remove('d-none');
            addBtn.innerText = 'Modifier la photo';
        };
        reader.readAsDataURL(file);
        input.value = '';
    });

    img?.addEventListener('click', () => {
        lightboxImg.src = img.src;
        lightbox.style.display = 'flex';
    });

    lightbox?.addEventListener('click', () => {
        lightbox.style.display = 'none';
        lightboxImg.src = '';
    });
});
</script>

</body>
</html>
